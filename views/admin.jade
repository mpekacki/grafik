extends layout

block content
	script(src='/javascripts/dyzury.js')
	h2.
		Supertajny Panel Admina
	form(class='form-horizontal',role='form',action='/api/dyzury',method='POST')
		div(class='form-group')
			label(class='control-label col-sm-2')
				| Osoba:
			div(class='col-sm-10')
				select(class='form-control',id='osoby',name='osoba')
					each osoba, i in osoby
						option(value='#{osoba.name}',selected=osoba.name == selectedUser)
							| #{osoba.name}
		div(class='form-group')
			label(class='control-label col-sm-2')
				| Rola:
			div(class='col-sm-10')
				select(class='form-control',id='role',name='rola')
					option(value='brak')
						| brak
					option(value='loza')
						| Loża
					option(value='uzytkownicy')
						| Użytkownicy
		div(class='form-group')
			label(class='control-label col-sm-2')
				| Dyżury:
			div(class='col-sm-10')
				table(class='table table-striped table-condensed')
					tr
						th
							| Poniedziałek
						th
							| Wtorek
						th
							| Środa
						th
							| Czwartek
						th
							| Piątek
						th
							| Sobota
						th
							| Niedziela
					tr
						td
							input(type='checkbox',id='poniedzialek',value='',name='poniedzialek')
						td
							input(type='checkbox',id='wtorek',value='',name='wtorek')
						td
							input(type='checkbox',id='sroda',value='',name='sroda')
						td
							input(type='checkbox',id='czwartek',value='',name='czwartek')
						td
							input(type='checkbox',id='piatek',value='',name='piatek')
						td
							input(type='checkbox',id='sobota',value='',name='sobota')
						td
							input(type='checkbox',id='niedziela',value='',name='niedziela')
		div(class='form-group')
			label(class='control-label col-sm-2')
				| Supertajny klucz:
			div(class='col-sm-10')
				input(class='form-control',type='password',id='klucz',placeholder='Tutaj wpisz supertajny klucz',value='',name='klucz')
		div(class='form-group')
			div(class='col-sm-offset-2 col-sm-10')
				button(type='submit',class='btn btn-default')
					| Zapisz dane